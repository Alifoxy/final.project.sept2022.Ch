model Orders {
  id            Int       @id @default(autoincrement())
  name          String?
  surname       String?
  email         String?   @unique
  phone         String?
  age           Int?
  course        String?
  course_format String?
  course_type   String?
  status        String?
  sum           Int?
  alreadyPaid   Int?
  group         String?
  created_at    DateTime? @default(now())
  utm           String?
  msg           String?
  manager       String?
  mentor        User?     @relation(fields: [mentorId], references: [id])
  mentorId      Int?
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  lastName  String?
  firstName String?
  password  String
  roles     Role?    @default(Admin)
  orders    Orders[]
}

enum Role {
  Admin
  Manager
}
